<!DOCTYPE html>
<html lang="en">
<head>
    @{

        var userId = "1";
        var logId = "A";
        var userType = "Admin";
        var userName = "";
        var userOrderGuid = "";


        var userClaims = HttpContextAccessor.HttpContext.User.Claims;
        userId = userClaims.FirstOrDefault(x => x.Type == "UserId") == null ? "" : userClaims.FirstOrDefault(x => x.Type == "UserId").Value;
        userType = userClaims.FirstOrDefault(x => x.Type == "Usertype") == null ? "" : userClaims.FirstOrDefault(x => x.Type == "Usertype").Value;
        userName = userClaims.FirstOrDefault(x => x.Type == "UserName") == null ? "" : userClaims.FirstOrDefault(x => x.Type == "UserName").Value;
        userOrderGuid = userClaims.FirstOrDefault(x => x.Type == "OrderGuid") == null ? "" : userClaims.FirstOrDefault(x => x.Type == "OrderGuid").Value;


    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrCellUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Home_.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous" />
    <script src="~/js/GeneralScripts.js"></script>
    <script src="~/vendor/jquery-3.3.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.4.1/chart.min.js" integrity="sha512-5vwN8yor2fFT9pgPS9p9R7AszYaNn0LkQElTXIsZFCL7ucT8zDCAqlQXDdaqgA1mZP47hdvztBMsIoFxq/FyyQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <!-- Head Libs -->
    <script src="~/vendor/modernizr/modernizr.min.js"></script>
    <script>
            var __userid = '@userId';
            var __logId = '@logId';
            var __userType = '@userType';
            var __userName = '@userName';
            var __userOrderGuid = '@userOrderGuid';
            var __tempOrderList=[];
    </script>
   <script src="~/js/Order/Index.js?Date=123"></script>

</head>
<body>
    <script src="~/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/vendor/jquery.easy-pie-chart/jquery.easypiechart.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    <script src="~/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/vendor/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/vendor/animate/animate.compat.css">
    <link rel="stylesheet" href="~/vendor/simple-line-icons/css/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/vendor/owl.carousel/assets/owl.carousel.css">
    <link rel="stylesheet" href="~/vendor/owl.carousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/vendor/magnific-popup/magnific-popup.min.css">

    <header>
        <nav class="navbar navbar-dark navbar-expand-lg bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="../Home">Giriş</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="../Order/Order">Mağaza</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="../Order/CreateOrder">Sepetim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="../Order/MyPage">Sparişlerim</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <button class="bucket" onclick="GoCreateOrder();">
                            <div class="cart-img position-relative">
                                <hidden id="hdnBucketCount"></hidden>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                      id="spnBucketCount">
                                    0
                                </span>
                            </div>
                            Sepetim
                        </button>
                    </div>
                </div>
            </div>
        </nav>
